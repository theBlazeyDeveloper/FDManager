<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">FD Manager</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <a class="nav-link" style="cursor:pointer;" @onclick="ToggleStationMenu">
                <span class="oi oi-fire" aria-hidden="true"></span> Stations
            </a>
        </div>

        <div class="@StationCssClass">
            <ul class="px-0" style="background-color:white; list-style:none">

                <li class="nav-item px-4">
                    <NavLink class="nav-link" style="color:blueviolet!important;" href="stations" Match="NavLinkMatch.All">
                        <span class="oi oi-list" aria-hidden="true"></span> View
                    </NavLink>
                </li>

                <li class="nav-item px-4">
                    <NavLink class="nav-link" style="color:blueviolet!important;" href="/stations/upload" Match="NavLinkMatch.All">
                        <span class="oi oi-data-transfer-upload" aria-hidden="true"></span> Upload
                    </NavLink>
                </li>
            </ul>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/logistics" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Logistics
            </NavLink>
        </div>
    </nav>
</div>

@code {
    bool collapseNavMenu = true;

    bool collapseStationMenu = true;

    string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    string? StationCssClass => collapseStationMenu ? "d-none" : null;

    void ToggleNavMenu() => collapseNavMenu = !collapseNavMenu;

    void ToggleStationMenu() => collapseStationMenu = !collapseStationMenu;
}
